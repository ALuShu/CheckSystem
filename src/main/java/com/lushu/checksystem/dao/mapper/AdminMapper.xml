<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lushu.checksystem.dao.AdminDao">

    <!-- 批量导入学生信息 -->
    <insert id="addStudents" parameterType="java.util.List" useGeneratedKeys="false">
        insert into student (id, name, password, department, major)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.id},
            #{item.name},
            111111,
            #{item.department},
            #{item.major})
        </foreach>
    </insert>

    <!-- 批量删除学生信息 -->
    <delete id="deleteStudents" parameterType="java.util.List">
        delete from student where id in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <!-- 批量导入教师信息 -->
    <insert id="addTeachers" parameterType="java.util.List" useGeneratedKeys="false">
        insert into teacher (id, name, password, department)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.id},
            #{item.name},
            111111,
            #{item.department})
        </foreach>
    </insert>

    <!-- 批量删除教师信息 -->
    <delete id="deleteTeachers" parameterType="java.util.List">
        delete from teacher where id in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <!-- 批量更新学生信息 -->
    <update id="updateStudent" parameterType="java.util.List">
        update student
        <trim prefix="set" suffixOverrides=",">
            <foreach collection="list" item="item">
                <trim prefix="name=case" suffix="end,">
                    <if test="item.name!=null">
                        when id=#{item.id} then #{item.name} else name
                    </if>
                </trim>
                <trim prefix="department=case" suffix="end,">
                    <if test="item.department!=null">
                        when id=#{item.id} then #{item.department} else department
                    </if>
                </trim>
                <trim prefix="major=case" suffix="end,">
                    <if test="item.major!=null">
                        when id=#{item.id} then #{item.major} else major
                    </if>
                </trim>
            </foreach>
        </trim>
        where id in
        <foreach collection="list" item="item" index="index" separator="," open="(" close=")">
            #{item.id}
        </foreach>
    </update>

    <!-- 批量更新教师信息 -->
    <update id="updateTeacher" parameterType="java.util.List">
        update teacher
        <trim prefix="set" suffixOverrides=",">
            <foreach collection="list" item="item">
                <trim prefix="name=case" suffix="end,">
                    <if test="item.name!=null">
                        when id=#{item.id} then #{item.name} else name
                    </if>
                </trim>
                <trim prefix="department=case" suffix="end,">
                    <if test="item.department!=null">
                        when id=#{item.id} then #{item.department} else department
                    </if>
                </trim>
            </foreach>
        </trim>
        where id in
        <foreach collection="list" item="item" index="index" separator="," open="(" close=")">
            #{item.id}
        </foreach>
    </update>

    <!-- 批量发布通知 -->
    <insert id="addInforms" parameterType="java.util.List">
        insert into inform (sendId, receiveId, content)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.sendId},
             #{item.receiveId},
             #{item.content})
        </foreach>
    </insert>

    <!-- 查询某教师信息 -->
    <select id="selectTeacher" parameterType="Teacher" resultType="Teacher">
        select * from teacher where 1=1
        <if test="name!=null and name!=''">
            and name=#{name}
        </if>
        <if test="department!=null and department!=''">
            and department=#{department}
        </if>
    </select>

    <!-- 查询某学生信息 -->
    <select id="selectStudent" parameterType="Student" resultType="Student">
        select * from student where 1=1
        <if test="name!=null and name!=''">
            and name=#{name}
        </if>
        <if test="department!=null and department!=''">
            and department=#{department}
        </if>
        <if test="major!=null and major!=''">
            and major=#{major}
        </if>
    </select>

    <!-- 查询前10个学生 -->
    <select id="selectStudents" resultType="Student">
        select * from student limit 10
    </select>
</mapper>